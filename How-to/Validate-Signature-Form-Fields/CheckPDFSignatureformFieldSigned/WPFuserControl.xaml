<UserControl x:Class="CheckPDFSignatureformFieldSigned.WPFuserControl"
             xmlns:PdfViewer="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CheckPDFSignatureformFieldSigned"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid Margin="0,-4,0,4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <PdfViewer:PdfViewerControl 
        x:Name="pdfViewer" 
        Grid.Row="0" IsTextSelectionEnabled="False" ShowHorizontalScrollBar="False" ShowVerticalScrollBar="True" ShowScrollbar="True" IsBookmarkEnabled="False" ShowToolbar="False"/>
    </Grid>
</UserControl>
