<UserControl x:Class="CustomPassswordDialog.WPFuserControl"
             xmlns:PdfViewer="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomPassswordDialog"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <PdfViewer:PdfViewerControl x:Name="pdfViewer" 
                                    GetDocumentPassword="pdfViewer_GetDocumentPassword"
                                    ErrorOccurred="pdfViewer_ErrorOccurred"/>
    </Grid>
</UserControl>
